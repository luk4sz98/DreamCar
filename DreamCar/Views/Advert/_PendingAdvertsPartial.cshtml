@model IEnumerable<UserAdvertVm>

@{
    if (Model.Count() == 0 || Model == null)
    {
        <div class="d-flex justify-content-center align-items-center flex-column" style="margin-top:15vh;">
            <img src="~/assets/img/car.svg" class="img-fluid w-25" />
            <h3 class=" text-center">Nie masz żadnych oczekujących ogłoszeń</h3>
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="col-12 col-lg-4 ms-lg-5 mb-3" style="border-radius: 1rem;">
                <input style="border-radius: 1rem;" id="filterAdvert" type="text" class="form-control shadow-none" placeholder="Filtruj po tytule..."
                       onfocus="this.value=''">
            </div>
            <div class="tableAdverts col-11 mx-auto table-responsive mb-3">
                <table class="table table-striped table-hover table-borderless">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th data-bs-toggle="tooltip" data-bs-placement="left" title="Sortuj malejąco/rosnąco wg tytułu" data-bs-animation="true" scope="col">Tytuł</th>
                            <th data-bs-toggle="tooltip" data-bs-placement="left" title="Sortuj malejąco/rosnąco wg ceny" data-bs-animation="true" scope="col">Cena</th>
                            <th data-bs-toggle="tooltip" data-bs-placement="right" title="Sortuj malejąco/rosnąco wg daty utworzenia" data-bs-animation="true" class="d-none d-md-table-cell text-center" scope="col">Data utworzenia</th>
                        </tr>
                    </thead>
                    <tbody class="advertsTableData">
                        <partial name="_AdvertTableDataPartial" model="ViewBag.PendingAdverts" />
                    </tbody>
                </table>
            </div>
        </div>
    }
}