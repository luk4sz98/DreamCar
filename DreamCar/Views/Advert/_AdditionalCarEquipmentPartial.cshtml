@model CarVm
@using DreamCar.Model.DataModels.Enums


<section class="additionalEquipment">
    <h4 class="text-center">Podstawowe informacje</h4>
    <div class="input-group">
        <div class="form-floating col-12 col-md-4 col-lg-3 mb-3 me-3">
            <select id="gearboxList" required asp-for="Gearbox" asp-items="Html.GetEnumSelectList<GearboxType>()" class="form-select" style="border-radius: 1rem;">
                <option value="" disabled selected>Wybierz typ skrzynii</option>
            </select>
            <label for="gearboxList" class="form-label">Rodzaj skrzynii biegów <sup><icon class="fas fa-star" style="margin: 0; text-indent: -3px; font-size: 6px; color: rgb(255,23,8);"></icon></sup></label>
            <span asp-validation-for="Gearbox" class="text-danger"></span>
        </div>
        <div class="form-floating col-12 col-md-4 col-lg-3 mb-3 me-3">
            <input id="version" required asp-for="Version" placeholder="Wersja" class="form-control" style="border-radius: 1rem;" />
            <label for="version">Wersja <sup><icon class="fas fa-star" style="margin: 0; text-indent: -3px; font-size: 6px; color: rgb(255,23,8);"></icon></sup></label>
            <span asp-validation-for="Version" class="text-danger"></span>
        </div>
    </div>
</section>