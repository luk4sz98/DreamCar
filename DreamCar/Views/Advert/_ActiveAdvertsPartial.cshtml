@model IEnumerable<UserAdvertVm>

@{
    if (Model.Count() == 0 || Model == null)
    {
        <div class="d-flex justify-content-center align-items-center flex-column" style="margin-top:15vh;">
            <img src="~/assets/img/car.svg" class="img-fluid w-25" />
            <h3 class=" text-center">Nie masz żadnych aktywnych ogłoszeń</h3>
        </div>
    }
    else
    {
        <div class="row mt-3">
            <div class="tableAdverts col-11 mx-auto table-responsive mb-3">
                <table class="table table-striped table-hover table-borderless">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">Tytuł</th>
                            <th scope="col">Cena</th>
                            <th class="d-none d-md-table-cell text-center" scope="col">Data utworzenia</th>
                        </tr>
                    </thead>
                    <tbody>
                        <partial name="_AdvertTableDataPartial" model="ViewBag.ActiveAdverts" />
                    </tbody>
                </table>
            </div>
        </div>
    }
}