@section Scripts {
    <script src="~/assets/js/tableScript.js"></script>
    <script>
        var advertId
        $(".dropdownAdvertManageButton").click(function () {
            advertId = $(this).closest("tr").children("td:first").text()
        })

        $("#endAdvertButton").click(function () {
            $.ajax({
                url: "@Url.Action("EndAdvert", "Advert")",
                data: {
                    advertId: advertId
                },
                type: 'POST',
                success: function (response) {
                    window.location.href = response.redirectToUrl
                    $("#endConfirmationModal").modal('hide');
                },
                error: function () {
                    $("#endConfirmationModal").modal('hide');
                }
            })
        })
        $("#deleteAdvertButton").click(function () {
            $.ajax({
                url: "@Url.Action("DeleteAdvert", "Advert")",
                data: {
                    advertId: advertId
                },
                type: 'POST',
                success: function (response) {
                    window.location.href = response.redirectToUrl
                    $("#deleteConfirmationModal").modal('hide');
                },
                error: function () {
                    $("#deleteConfirmationModal").modal('hide');
                }
            })
        })
    </script>
}
