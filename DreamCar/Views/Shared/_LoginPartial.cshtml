@using Microsoft.AspNetCore.Identity
@using DreamCar.Model.DataModels
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav d-xl-flex ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-none d-md-block">
            <a class="nav-link" data-bs-toggle="offcanvas" href="#offcanvas" aria-controls="offcanvas">
                <i class="icon-menu"></i>
            </a>
        </li>
        <li class="nav-item d-block d-md-none">
            <a class="btn btn-primary d-block w-100" id="menuButton" asp-controller="Advert" asp-action="UserAdverts">Ogłoszenia</a>
        </li>
        <li class="nav-item d-block d-md-none">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="btn btn-primary d-block w-100" id="menuButton" type="submit">Obserwowane</button>
            </form>
        </li>
        <li class="nav-item d-block d-md-none">
            <a asp-controller="Account" asp-action="Index" class="btn btn-primary d-block w-100" id="menuButton">Ustawienia</a>
        </li>
        <li class="nav-item d-block d-md-none">
            <a class="btn btn-primary d-block w-100" id="menuButton" asp-controller="Contact" asp-action="SendRequest">Kontakt</a>
        </li>
        <li class="nav-item d-block d-md-none">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button class="btn btn-primary d-block w-100" id="menuButton" type="submit">Wyloguj</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link active shadow-none" id="loginButton" style="font-size: 18px;">Zaloguj</a></li>
        <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link active btn shadow-none" id="registrationButton" style="font-size: 18px;">Rejestracja</a></li>
    }
</ul>