@using Microsoft.AspNetCore.Identity
@using DreamCar.Model.DataModels
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav d-xl-flex ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
       <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Login" class="nav-link active" id="loginButton" style="font-size: 18px;">Zaloguj</a></li>
       <li class="nav-item"><a asp-area="Identity" asp-page="/Account/Register" class="nav-link active btn" id="registrationButton" style="font-size: 18px;">Rejestracja</a></li>
    }
</ul>
