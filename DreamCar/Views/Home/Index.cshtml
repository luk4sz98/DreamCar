@{
    ViewData["Title"] = "Strona główna";
}

@{
    if (TempData["AccountRegistered"] == null ? false : true)
    {
        <div class="alertMessage alert alert-success alert-dismissible fade show" role="alert">
            Konto utworzone pomyślnie, sprawdz swoją skrzynkę pocztową i <strong>potwierdź adres email:)</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    if (TempData["AccountConfirmed"] == null ? false : true)
    {
        <div class="alertMessage alert alert-success alert-dismissible fade show" role="alert">
            Adres email został potwierdzony.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    if (TempData["MessageSent"] == null ? false : true)
    {
        <div class="alertMessage alert alert-success alert-dismissible fade show" role="alert">
            Wiadomość została wysłana pomyślnie!<br />
            Odpowiemy tak szybko, jak to możliwe :)
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

