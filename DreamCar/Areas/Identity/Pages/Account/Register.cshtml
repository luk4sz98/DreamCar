@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<section class="login-clean" style="background: rgb(255,255,255);">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="shadow" data-aos="fade-down" data-aos-duration="800" data-aos-delay="800" data-aos-once="true" style="border-radius: 1rem;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="illustration">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person-plus" style="transform: rotate(0deg);color: var(--bs-dark);font-size: 75px;">
                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z"></path>
            </svg>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" style="border-radius: 1rem;">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Hasło" style="border-radius: 1rem;">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Potwierdź hasło" style="border-radius: 1rem;">
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="mb-3">
            <button class="btn btn-primary d-block w-100" id="logInFormButton" type="submit" style="border-radius: 2rem;background: lightseagreen;">Zarejestruj</button>
        </div>
        <a class="forgot" asp-area="Identity" asp-page="/Account/Login">Masz już konto? Zaloguj się</a>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
