@page
@model LoginModel

@{
    ViewData["Title"] = "Logowanie";
}


@{
    if (TempData["PasswordReset"] == null ? false : true)
    {
        <div class="alertMessage alert alert-success alert-dismissible fade show" role="alert">
            Hasło zostało zresetowane pomyślnie!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<section class="login-clean" style="background: rgb(255,255,255);">
    <form id="account" method="post" class="shadow" data-aos="fade-down" data-aos-duration="800" data-aos-delay="800" data-aos-once="true" style="border-radius: 1rem;">
        <div class="row">
            <div class="col d-flex justify-content-center align-items-center mb-2">
                <h2>Logowanie <i class="la la-sign-in" style="transform: rotate(180deg);"></i></h2>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="Email" style="border-radius: 1rem;">
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Hasło" style="border-radius: 1rem;">
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="mb-3">
                <button class="btn btn-primary d-block w-100" id="logInFormButton" type="submit" style="border-radius: 2rem;background: lightseagreen;">Zaloguj</button>
            </div>
            <a class="forgot" asp-area="Identity" asp-page="ForgotPassword">Nie pamiętasz hasła?</a>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
